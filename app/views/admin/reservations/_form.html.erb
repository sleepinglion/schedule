<%= form_with(model: [:admin, reservation], local: true) do |form| %>
  <div class="card">
    <div class="card-body">
      <div class="form-row">
        <div class="col-12 form-group">
          <%= form.label :order_id %>
          <%= form.select :order_id,options_from_collection_for_select(Order.where(:enable=>true).all, 'id', 'title',reservation.order),{},{:class=>"form-control"} %>
        </div>
        <div class="col-12 form-group">
          <%= form.label :start_datetime %>
          <%= form.datetime_field :start_datetime, :class => 'form-control', :required => 'required'  %>
        </div>
        <div class="col-12 form-group">
          <%= form.label :end_datetime %>
          <%= form.datetime_field :end_datetime, :class => 'form-control', :required => 'required' %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit :class => 'btn btn-primary btn-block btn-lg' %>
  </div>
<% end %>
