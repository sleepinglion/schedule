<section id="show-address-category" class="container">
  <div class="row">
    <%= render :partial => 'layouts/notice', :locals => { :errors => @address_category.errors, :notice => notice, :alert => alert } %>
  </div>
  <div class="row">
    <div class="col-12">
      <article class="card">
        <h3 class="card-header"><%=@address_category.title %></h3>
        <div class="card-body">
          <dl>

            <dt><%= t(:addresses_count, scope: [:activerecord, :attributes, :address_category]) %></dt>
            <dd><%= @address_category.addresses_count %></dd>
            <dt><%= t(:created_at, scope: [:activerecord, :attributes, :receipt]) %></dt>
            <dd><%= I18n.l @address_category.created_at.to_date, :format => :long %></dd>
            <dt><%= t(:updated_at, scope: [:activerecord, :attributes, :receipt]) %></dt>
            <dd><%= I18n.l @address_category.updated_at.to_date, :format => :long %></dd>
          </dl>
        </div>
      </article>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-xl-6">
      <%= link_to t(:link_list), admin_address_categories_path, class: 'btn btn-secondary' %>
    </div>
    <div class="col-12 col-xl-6 text-right">
      <%= link_to t(:edit), edit_admin_address_category_path(@address_category), class: 'btn btn-secondary' %>
      <%= link_to t(:delete), admin_address_category_path(@address_category), class: 'btn btn-danger' %>
    </div>
  </div>
</section>
